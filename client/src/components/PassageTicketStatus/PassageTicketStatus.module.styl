.status {
  display: block;
  text-transform: uppercase;
  text-align: center;
  padding: 5px;
  border-radius: 10px;

  &.__unchecked {
    background-color: #eaeaea;
  }

  &.__validated {
    background-color: #abd5fc;
  }

  &.__activated {
    background-color: #f39cf2;
  }

  &.__fully-activated {
    background-color: #72f572;
  }

  &.__rejected {
    background-color: #ff3535;
  }
}