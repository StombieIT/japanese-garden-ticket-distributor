.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px 0;
}

$link {
  text-decoration: none;
  color: #000;
}

.link {
  @extend $link;
  padding: 30px 15px;
  border-radius: 25px;
  transition: .15s ease-in-out background-color;

  &.__current {
    background-color: #D0FF004D;
  }

  &:hover {
    background-color: #D0FF00FF;
  }
}

.links {
  display: flex;
}

.main-link {
  @extend $link;
  font-size: 28px;
}
