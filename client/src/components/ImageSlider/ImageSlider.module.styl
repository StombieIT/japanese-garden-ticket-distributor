.slider {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.images-wrapper {
  position: relative;
  width: 800px;
  flex-basis: 550px;
  flex-shrink: 0;
  border-radius: 20px;
  overflow: hidden;
}

.image-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  opacity: 0;
  transition: .25s opacity;

  &.__active {
    opacity: 1;
  }
}

.image {
  object-fit: cover;
  max-width: 100%;
}

.controls {
  margin-top: 20px;
}

.control {
  display: inline-block;
  width: 15px;
  height: @width;
  border: 2px solid $main-color;
  border-radius: 50%;
  cursor: pointer;

  &.__active {
    background-color: $main-color;
  }

  & + .control {
    margin-left: 10px;
  }
}
