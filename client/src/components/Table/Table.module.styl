.content {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 75px;
}

.table {
  border-collapse: collapse;
  border-radius: 15px;
  overflow: hidden;
  width: 100%;
  box-shadow: 0 0 10px $shadow-color;
}

.head {
  background-color: $main-color;
}

.row {
  display: flex;

  &:nth-child(2n) {
    background-color: $light-gray;
  }
}

.cell {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  padding: 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1 0 120px;
  gap: 20px;
}

.editing-field {
  width: 100%;
  border: none;
  outline: none;
  font-size: 16px;
  background-color: transparent;
}

.submit-button {
  align-self: flex-end;
  margin-top: 75px;
}

.controls {
  align-self: flex-end;
  display: flex;
  gap: 30px;
}
