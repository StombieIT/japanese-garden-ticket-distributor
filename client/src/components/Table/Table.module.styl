.content {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 75px;
}

.table {
  border-collapse: collapse;
  border-radius: 50px;
  width: 100%;
}

.head {
  background-color: $main-color;
}

.row {
  display: flex;
}

.cell {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  padding: 10px;
  border: 1px solid;
  border-collapse: collapse;
  display: flex;
  align-items: center;
  justify-content space-between
  flex: 1 0 120px;
  gap: 20px;
}

.editing-field {
  width: 100%;
  border: none;
  outline: none;
  font-size: 16px;
}

.submit-button {
  align-self: flex-end;
  margin-top: 75px;
}

.controls {
  align-self: flex-end;
  display: flex;
  gap: 30px;
}
