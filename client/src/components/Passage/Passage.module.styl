.passage-content {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.editor {
  min-width: 60vw;
  margin-top: 50px;
  padding: 50px;
  border: 3px solid $main-color;
  border-radius: 20px;
}

.line {
  display: flex;
  justify-content: space-between;

  & + .line {
    margin-top: 40px;
  }
}

.submit-button {
  margin-top: 75px;
}
